generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  createdAt    DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  people       Person[]
  sessions     Session[]
  categories   SavingCategory[]
}

model Person {
  id            Int           @id @default(autoincrement())
  name          String        @db.VarChar(64)
  userId        String
  createdAt     DateTime      @default(now()) @db.Timestamptz(6)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  savingEntries SavingEntry[]

  @@unique([userId, name])
  @@index([userId])
}

model SavingEntry {
  id        Int      @id @default(autoincrement())
  personId  Int
  categoryId Int?
  label     String   @db.VarChar(128)
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  category  SavingCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: NoAction)

  @@index([createdAt(sort: Desc)])
  @@index([personId])
  @@index([categoryId])
}

model Session {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  expires   DateTime @db.Timestamptz(6)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model SavingCategory {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(64)
  description String?       @db.VarChar(256)
  userId      String
  createdAt   DateTime      @default(now()) @db.Timestamptz(6)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  savingEntries SavingEntry[]

  @@unique([userId, name])
  @@index([userId])
}
